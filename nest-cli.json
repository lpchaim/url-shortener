{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": false
        }
      }
    ],
    "assets": [
      {"include": "database", "exclude": ".*"},
      {"include": ".env"},
      {"include": ".env.*", "exclude": ".env.*.example"}
    ],
    "watchAssets": true
  }
}